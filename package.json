{
  "name": "sequra-core-admin-fe",
  "version": "2.0.1",
  "scripts": {
    "copy-dist-js": "cp ./src/services/* ./src/components/**/*.js ./src/controllers/*.js ./src/forms/*.js ./dist/resources/js",
    "copy-dist-assets": "cp -r ./src/design/assets ./src/lang ./dist/resources",
    "build-dist-css": "sass --no-source-map src/components/index.scss dist/resources/css/sequra-core.css",
    "dist": "mkdir -p \"./dist/resources/js\" && npm run build-dist-css && npm run copy-dist-js && npm run copy-dist-assets && cp ./test/index.html ./dist"
  },
  "dependencies": {
    "json-formatter-js": "^2.5.23",
    "simple-datatables": "^10.0.0"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.6.2",
    "sass": "^1.93.2"
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}